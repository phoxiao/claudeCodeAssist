{
  "name": "claude-code-assist",
  "displayName": "Claude Code Assist",
  "description": "Manage Claude Code sub-agents and skills",
  "version": "0.0.1",
  "publisher": "kivixiao",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "resources/icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/phoxiao/claudeCodeAssist.git"
  },
  "activationEvents": [
    "onView:claudeSkills",
    "onCommand:claude-code-assist.refreshSkills",
    "onCommand:claude-code-assist.moveToUser",
    "onCommand:claude-code-assist.deleteSkill",
    "onCommand:claude-code-assist.openMarketplace",
    "onCommand:claude-code-assist.installFromUrl",
    "onCommand:claude-code-assist.installFromClipboard",
    "onCommand:claude-code-assist.checkConflicts",
    "onCommand:claude-code-assist.deletePlugin",
    "onCommand:claude-code-assist.auditAll",
    "onCommand:claude-code-assist.auditSkill",
    "onCommand:claude-code-assist.auditPlugin",
    "onCommand:claude-code-assist.checkUpdates",
    "onCommand:claude-code-assist.exportConfig",
    "onCommand:claude-code-assist.importConfig",
    "onCommand:claude-code-assist.deleteCommand",
    "onCommand:claude-code-assist.moveCommandToUser",
    "onCommand:claude-code-assist.openMarketplaceConfig"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-code-assist.refreshSkills",
        "title": "Refresh Skills"
      },
      {
        "command": "claude-code-assist.moveToUser",
        "title": "Move to User",
        "icon": "$(arrow-up)"
      },
      {
        "command": "claude-code-assist.deleteSkill",
        "title": "Delete Skill",
        "icon": "$(trash)"
      },
      {
        "command": "claude-code-assist.openMarketplace",
        "title": "Open Marketplace",
        "icon": "$(cloud-download)"
      },
      {
        "command": "claude-code-assist.installFromUrl",
        "title": "Claude: Install Skill from URL",
        "icon": "$(link)"
      },
      {
        "command": "claude-code-assist.installFromClipboard",
        "title": "Claude: Install Skill from Clipboard",
        "icon": "$(clippy)"
      },
      {
        "command": "claude-code-assist.checkConflicts",
        "title": "Check Conflicts"
      },
      {
        "command": "claude-code-assist.deletePlugin",
        "title": "Delete Plugin",
        "icon": "$(trash)"
      },
      {
        "command": "claude-code-assist.auditAll",
        "title": "Security Audit: All",
        "icon": "$(shield)"
      },
      {
        "command": "claude-code-assist.auditSkill",
        "title": "Security Audit",
        "icon": "$(shield)"
      },
      {
        "command": "claude-code-assist.auditPlugin",
        "title": "Security Audit",
        "icon": "$(shield)"
      },
      {
        "command": "claude-code-assist.checkUpdates",
        "title": "Claude: Check for Updates",
        "icon": "$(sync)"
      },
      {
        "command": "claude-code-assist.exportConfig",
        "title": "Claude: Export Configuration",
        "icon": "$(export)"
      },
      {
        "command": "claude-code-assist.importConfig",
        "title": "Claude: Import Configuration",
        "icon": "$(import)"
      },
      {
        "command": "claude-code-assist.deleteCommand",
        "title": "Delete Command",
        "icon": "$(trash)"
      },
      {
        "command": "claude-code-assist.moveCommandToUser",
        "title": "Move to User",
        "icon": "$(arrow-up)"
      },
      {
        "command": "claude-code-assist.moveToProject",
        "title": "Move to Project",
        "icon": "$(arrow-down)"
      },
      {
        "command": "claude-code-assist.moveCommandToProject",
        "title": "Move to Project",
        "icon": "$(arrow-down)"
      },
      {
        "command": "claude-code-assist.movePluginToUser",
        "title": "Move to User",
        "icon": "$(arrow-up)"
      },
      {
        "command": "claude-code-assist.movePluginToProject",
        "title": "Move to Project",
        "icon": "$(arrow-down)"
      },
      {
        "command": "claude-code-assist.openMarketplaceConfig",
        "title": "Configure Marketplace Sources",
        "icon": "$(gear)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claude-code-assist",
          "title": "Claude Assist",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "claude-code-assist": [
        {
          "id": "claudeSkills",
          "name": "Skills & Agents"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "claude-code-assist.installFromUrl",
          "when": "view == claudeSkills",
          "group": "navigation@1"
        },
        {
          "command": "claude-code-assist.openMarketplace",
          "when": "view == claudeSkills",
          "group": "navigation@2"
        },
        {
          "command": "claude-code-assist.auditAll",
          "when": "view == claudeSkills",
          "group": "navigation@3"
        },
        {
          "command": "claude-code-assist.checkUpdates",
          "when": "view == claudeSkills",
          "group": "navigation@4"
        },
        {
          "command": "claude-code-assist.exportConfig",
          "when": "view == claudeSkills",
          "group": "config@1"
        },
        {
          "command": "claude-code-assist.importConfig",
          "when": "view == claudeSkills",
          "group": "config@2"
        },
        {
          "command": "claude-code-assist.openMarketplaceConfig",
          "when": "view == claudeSkills",
          "group": "navigation@5"
        }
      ],
      "view/item/context": [
        {
          "command": "claude-code-assist.deleteSkill",
          "when": "view == claudeSkills && viewItem =~ /^(user|project)-(skill|agent)/",
          "group": "inline"
        },
        {
          "command": "claude-code-assist.moveToUser",
          "when": "view == claudeSkills && viewItem =~ /^project-(skill|agent)/",
          "group": "inline"
        },
        {
          "command": "claude-code-assist.deleteCommand",
          "when": "view == claudeSkills && viewItem =~ /^(user|project)-command/",
          "group": "inline"
        },
        {
          "command": "claude-code-assist.moveCommandToUser",
          "when": "view == claudeSkills && viewItem =~ /^project-command/",
          "group": "inline"
        },
        {
          "command": "claude-code-assist.moveToProject",
          "when": "view == claudeSkills && viewItem =~ /^user-(skill|agent)/",
          "group": "inline"
        },
        {
          "command": "claude-code-assist.moveCommandToProject",
          "when": "view == claudeSkills && viewItem == user-command",
          "group": "inline"
        },
        {
          "command": "claude-code-assist.deletePlugin",
          "when": "view == claudeSkills && viewItem =~ /^(user|project)-plugin/",
          "group": "inline"
        },
        {
          "command": "claude-code-assist.movePluginToUser",
          "when": "view == claudeSkills && viewItem == project-plugin",
          "group": "inline"
        },
        {
          "command": "claude-code-assist.movePluginToProject",
          "when": "view == claudeSkills && viewItem == user-plugin",
          "group": "inline"
        },
        {
          "command": "claude-code-assist.auditSkill",
          "when": "view == claudeSkills && viewItem =~ /^(user|project)-(skill|agent)/",
          "group": "inline"
        },
        {
          "command": "claude-code-assist.auditPlugin",
          "when": "view == claudeSkills && viewItem =~ /^(user|project)-plugin/",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Claude Code Assist",
      "properties": {
        "claudeCodeAssist.globalSkillsPath": {
          "type": "string",
          "default": "~/.claude",
          "description": "Path to global Claude Code directory (containing skills and agents)"
        },
        "claudeCodeAssist.projectSkillsPath": {
          "type": "string",
          "default": "./.claude",
          "description": "Path to project Claude Code directory (containing skills and agents)"
        },
        "claudeCodeAssist.autoAuditOnInstall": {
          "type": "boolean",
          "default": true,
          "description": "Automatically run security audit after installing a skill or plugin"
        },
        "claudeCodeAssist.auditSeverityThreshold": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high",
            "critical"
          ],
          "default": "medium",
          "description": "Minimum severity level to show in audit warnings"
        },
        "claudeCodeAssist.enableClipboardWatcher": {
          "type": "boolean",
          "default": true,
          "description": "Watch clipboard for GitHub URLs and show quick install button in status bar"
        },
        "claudeCodeAssist.customSources": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Additional awesome-list URLs to use as skill sources (e.g., https://raw.githubusercontent.com/user/awesome-list/main/README.md)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "install-ext": "code --install-extension claude-code-assist-*.vsix",
    "build-and-install": "npm run compile && npm run package && npm run install-ext"
  },
  "dependencies": {
    "glob": "^8.1.0"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^8.41.0",
    "mocha": "^10.2.0",
    "sharp": "^0.34.5",
    "typescript": "^5.1.3"
  }
}
