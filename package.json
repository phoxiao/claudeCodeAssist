{
  "name": "claude-code-assist",
  "displayName": "Claude Code Assist",
  "description": "Manage Claude Code sub-agents and skills",
  "version": "0.0.1",
  "publisher": "kivixiao",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:claudeSkills",
    "onCommand:claude-code-assist.refreshSkills",
    "onCommand:claude-code-assist.moveToGlobal",
    "onCommand:claude-code-assist.deleteSkill",
    "onCommand:claude-code-assist.openMarketplace",
    "onCommand:claude-code-assist.checkConflicts",
    "onCommand:claude-code-assist.deletePlugin"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-code-assist.refreshSkills",
        "title": "Refresh Skills"
      },
      {
        "command": "claude-code-assist.moveToGlobal",
        "title": "Move to Global",
        "icon": "$(arrow-up)"
      },
      {
        "command": "claude-code-assist.deleteSkill",
        "title": "Delete Skill",
        "icon": "$(trash)"
      },
      {
        "command": "claude-code-assist.openMarketplace",
        "title": "Open Marketplace",
        "icon": "$(cloud-download)"
      },
      {
        "command": "claude-code-assist.checkConflicts",
        "title": "Check Conflicts"
      },
      {
        "command": "claude-code-assist.deletePlugin",
        "title": "Delete Plugin",
        "icon": "$(trash)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claude-code-assist",
          "title": "Claude Assist",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "claude-code-assist": [
        {
          "id": "claudeSkills",
          "name": "Skills & Agents"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "claude-code-assist.openMarketplace",
          "when": "view == claudeSkills",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "claude-code-assist.deleteSkill",
          "when": "view == claudeSkills && viewItem =~ /^(global|project)-.*/",
          "group": "inline"
        },
        {
          "command": "claude-code-assist.moveToGlobal",
          "when": "view == claudeSkills && viewItem =~ /project-.*/",
          "group": "inline"
        },
        {
          "command": "claude-code-assist.deletePlugin",
          "when": "view == claudeSkills && viewItem == plugin",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Claude Code Assist",
      "properties": {
        "claudeCodeAssist.globalSkillsPath": {
          "type": "string",
          "default": "~/.claude",
          "description": "Path to global Claude Code directory (containing skills and agents)"
        },
        "claudeCodeAssist.projectSkillsPath": {
          "type": "string",
          "default": "./.claude",
          "description": "Path to project Claude Code directory (containing skills and agents)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "glob": "^8.1.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
